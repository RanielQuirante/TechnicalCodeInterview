@model TechnicalCodeInterview.WebApp.Models.EmployeeDisplayModel

@{
    ViewData["Title"] = "DisplayById";
}

<h1>Employee Details</h1>

@if (Model.Employee is null)
{
    <h4>The requested record was not found</h4>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td><strong>First Name</strong></td>
                <td>@Model.Employee.FirstName</td>
            </tr>
            <tr>
                <td><strong>Middle Name</strong></td>
                <td>@Model.Employee.MiddleName</td>
            </tr>
            <tr>
                <td><strong>Last Name</strong></td>
                <td>@Model.Employee.LastName</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Update">
        <input name="id" value="@Model.Employee.Id" type="hidden" />
        <div class="form-group">
            <label class="control-label">First Name</label>
            <input name="firstName" value="@Model.Employee.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Middle Name</label>
            <input name="middleName" value="@Model.Employee.MiddleName" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Last Name</label>
            <input name="lastName" value="@Model.Employee.LastName" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Update Employee Details" class="btn btn-primary" />
        </div>
    </form>
}